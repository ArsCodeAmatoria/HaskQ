{
  "version": 2,
  "github": {
    "silent": true
  },
  "ignoreCommand": "git diff --quiet HEAD^ HEAD ./",
  "buildCommand": "npm run build",
  "outputDirectory": ".",
  "projects": {
    "apps/landing": {
      "framework": "nextjs"
    },
    "apps/playground": {
      "framework": "nextjs"
    },
    "apps/docs": {
      "framework": "docusaurus-2"
    }
  },
  "rewrites": [
    { "source": "/playground", "destination": "/playground" },
    { "source": "/playground/(.*)", "destination": "/playground/$1" },
    { "source": "/docs", "destination": "/docs" },
    { "source": "/docs/(.*)", "destination": "/docs/$1" },
    { "source": "/(.*)", "destination": "/$1" }
  ]
} 