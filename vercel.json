{
  "version": 2,
  "github": {
    "silent": true
  },
  "framework": "docusaurus-2",
  "builds": [
    { 
      "src": "apps/docs/package.json",
      "use": "@vercel/static-build",
      "config": { 
        "distDir": "build",
        "buildCommand": "npm run build"
      }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/$1" }
  ]
} 