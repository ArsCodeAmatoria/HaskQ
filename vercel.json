{
  "version": 2,
  "github": {
    "silent": true
  },
  "buildCommand": "npm run build",
  "ignoreCommand": "git diff --quiet HEAD^ HEAD ./",
  "outputDirectory": ".",
  "framework": "nextjs",
  "rewrites": [
    { "source": "/playground", "destination": "/apps/playground/dist/index.html" },
    { "source": "/playground/(.*)", "destination": "/apps/playground/dist/$1" },
    { "source": "/", "destination": "/apps/landing/dist/index.html" },
    { "source": "/landing/(.*)", "destination": "/apps/landing/dist/$1" },
    { "source": "/docs/(.*)", "destination": "/apps/docs/build/$1" },
    { "source": "/((?!apps|packages).*)", "destination": "/apps/docs/build/$1" }
  ]
} 