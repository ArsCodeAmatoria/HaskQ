{
  "version": 2,
  "github": {
    "silent": true
  },
  "buildCommand": "cd apps/docs && npm install && npm run build",
  "outputDirectory": "apps/docs/build",
  "routes": [
    { "src": "/playground/(.*)", "dest": "/apps/playground/dist/$1" },
    { "src": "/playground", "dest": "/apps/playground/dist/index.html" },
    { "handle": "filesystem" },
    { "src": "/$", "dest": "/apps/landing/dist/index.html" },
    { "src": "/landing/(.*)", "dest": "/apps/landing/dist/$1" },
    { "src": "/((?!apps|packages).*)", "dest": "/$1" }
  ]
} 